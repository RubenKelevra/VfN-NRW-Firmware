#Fix Bufferbloat
ifconfig eth1 txqueuelen 10
ifconfig eth0 txqueuelen 10
ifconfig wlan0 txqueuelen 20
ifconfig wlan0-1 txqueuelen 1000
tc qdisc replace dev wlan0-1 root fq_codel limit 1000 quantum 300 noecn

[ -f /var/run/hostapd-phy1.conf ] && {
  ifconfig wlan1 txqueuelen 20
  ifconfig wlan1-1 txqueuelen 1000
  tc qdisc replace dev wlan1-1 root fq_codel limit 1000 quantum 300 noecn
}
